{
  "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "types": ["vitest/globals"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@lib/*": ["src/lib/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@routes/*": ["src/routes/*"],
      "@layout/*": ["src/layout/*"]
    }
  },
  "include": ["src", "vite.config.ts", "vitest.config.ts", "vite-env.d.ts"],
  "exclude": ["node_modules", "dist", "coverage"]
}
